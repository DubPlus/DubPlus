{
  "name": "dubplus",
  "version": "4.1.1",
  "type": "module",
  "description": "Dub+ - A simple script/extension for QueUp.net",
  "main": "dubplus.js",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "vite build && cd extension && web-ext build --filename dubplus-extension.zip --overwrite-dest --artifacts-dir ../dist",
    "ci:build": "eslint src && vite build",
    "watch": "vite build --watch",
    "firefox": "cd extension && web-ext run --start-url www.queup.net --watch-files dist/dubplus.js dist/dubplus.css",
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "purge-cache": "node ./tasks/purge-cache.js",
    "zip-source": "rm -rf extension/dist && rm -f dist/dubplus-source.zip && node ./tasks/zip.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DubPlus/DubPlus.git"
  },
  "author": "DubPlus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DubPlus/DubPlus/issues"
  },
  "homepage": "https://dub.plus",
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@types/chrome": "^0.0.322",
    "@types/node": "^22.16.5",
    "eslint-plugin-svelte": "^3.11.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.36.14",
    "vite": "^6.3.5",
    "web-ext": "^8.9.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "lint-staged": {
    "src/*.{css,ts}": "prettier --list-different --write",
    "src/*.{js,svelte}": [
      "prettier --list-different --write",
      "eslint"
    ],
    "*.md": "prettier --list-different --write"
  }
}
